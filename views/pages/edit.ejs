<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../setups/head") %>
  </head>

  <body>
    <%- include("../components/navbar") %>

    <section id="home-content" class="container">
        <div class="mt-5">
        <div class="d-flex justify-content-between align-content-center">
          <h3>Add items</h3>
          <a href="/list" class="btn btn-outline-danger" style="width: 3rem;height: 3rem;display: flex;align-items: center;justify-content: center;">X</a>
        </div>
        <form class="mt-3" action="/list/<%= items.id %>/edit" method="post">
          <div class="mb-3">
            <label for="description" class="form-label"> Thumbnail img link </label>

            <input
                name="thumbnail"
                type="text"
                class="form-control"
                id="Thumbnail"
                placeholder="https://image.com"
                value="<%= items.thumbnail  %>"
              />
            </div>
          </div>
          <div class="mb-3 row justify-content-between">
            <div class="col-12 col-sm-6">
              <label for="name" class="form-label">Name</label>
              <input
                name="name"
                type="text"
                class="form-control"
                id="name"
                placeholder="Project A"
                value="<%= items.name  %>"
              />
            </div>
            <div class="col-12 col-sm-6">
              <label for="status" class="form-label">Status</label>
              <select
                name="status"
                class="form-select"
                aria-label="Default select exemple"
                id="brand"
              >
                <option value="true" <%= items.status === true ? "selected" : "" %>>Done</option>
                <option value="false" <%= items.status === false ? "selected" : "" %>>Abandon</option>
              </select>
            </div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label"> Description </label>

            <textarea name="desc" class="form-control" id="description" rows="3"><%= items.desc %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </section>

    <%- include("../setups/script") %>
  </body>
</html>
